<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <Button layoutX="392.0" layoutY="460.0" text="Send" onAction="#getMessageText"/>
    <TextArea fx:id="mainTextArea" prefHeight="436.0" prefWidth="460.0" onKeyTyped="#disableTextInput"
              onMouseClicked="#mouseClickedTextArea"/>
    <TextField id="messageLine" fx:id="messageLine" promptText="Enter your message" prefWidth="380" layoutX="10.0"
               layoutY="460.0" onAction="#getMessageText"/>
</AnchorPane>